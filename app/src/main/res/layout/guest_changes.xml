<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/singup"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Change Guest"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:padding="10dp"
            android:divider="@drawable/divider"
            android:orientation="vertical"
            android:showDividers="middle"
            >

            <EditText
                android:id="@+id/guestName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputbox"
                android:ems="10"
                android:hint="Guest Name"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="@color/color1" />

            <EditText
                android:id="@+id/guestContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputbox"
                android:ems="10"
                android:hint="Contact"
                android:inputType="textPostalAddress"
                android:padding="16dp"
                android:textColor="@color/color1" />

            <EditText
                android:id="@+id/guestCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputbox"
                android:ems="10"
                android:hint="Guest Count"
                android:inputType="number"
                android:padding="16dp"
                android:text="0"
                android:textColor="@color/color1" />

            <Button
                android:id="@+id/btnUpdateGuest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="Update"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnGuestDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="Delete"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>